{
  "manifest_version": 3,
  "name": "LastSimila1rious Web",
  "version": "0.0.1",
  "description": "Streaming player based on similar tracks from Last.fm",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://ws.audioscrobbler.com/*",
    "https://www.youtube.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LastSimilarious Web"
  },
  "content_scripts": [
    {
       "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["content.js"],
      "run_at": "document_idle"     
    }
  ],
  "options_page": "oprions/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
